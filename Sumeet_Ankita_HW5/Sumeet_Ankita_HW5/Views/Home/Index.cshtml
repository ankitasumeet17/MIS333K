<h1>Welcome to Our Book Store!</h1>

    <a asp-controller="Products" asp-action="Index" class="btn btn-success">View Our Products</a>

    @if (User.Identity.IsAuthenticated)
    {
        <a asp-controller="Orders" asp-action="Index" class="btn btn-success">View Orders</a>

        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="Suppliers" asp-action="Index" class="btn btn-success">View Suppliers</a>
            <a asp-controller="RoleAdmin" asp-action="Index" class="btn btn-success">Manage Users</a>
        }
    }


