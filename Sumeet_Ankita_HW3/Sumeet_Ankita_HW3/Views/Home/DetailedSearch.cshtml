@model Sumeet_Ankita_HW3.Models.SearchViewModel

@{
    ViewData["Title"] = "DetailedSearch";
}

<h1>DetailedSearch</h1>

<h4>SearchViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DisplaySearchResults">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" asp-items="Html.GetEnumSelectList<Category>()" class="form-control">
                    <option selected="selected" value="">All Categories</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SearchLanguage" class="control-label"></label>
                @Html.DropDownListFor(model => model.SearchLanguage, (SelectList)ViewBag.AllLanguages, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="StarCount" class="control-label"></label>
                <input asp-for="StarCount" class="form-control" />
                <span asp-validation-for="StarCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SearchType" class="control-label"></label><br />
                <input type="radio" class="radio" asp-for="SearchType" value="@SearchType.GreaterThan" /> Greater Than<br />
                <input type="radio" class="radio" asp-for="SearchType" value="@SearchType.LessThan" /> Less Than<br />
            </div>
            <div class="form-group">
                <label asp-for="UpdatedAfter" class="control-label"></label>
                <input asp-for="UpdatedAfter" class="form-control" />
                <span asp-validation-for="UpdatedAfter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

